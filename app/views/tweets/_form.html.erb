<%= form_for(@tweet, html: { class: 'form-horizontal' }) do |f| %>
    <% if @tweet.errors.any? %>
        <div class="alert alert-danger" id="error_explanation">
            <h3><%= pluralize(@tweet.errors.count, "erro") %> ao postar tweet:</h3>

            <ul>
                <% @tweet.errors.full_messages.each do |msg| %>
                     <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="col-md-12">

    <div class="form-group">
        <%= f.label "Título:" , :for => "title" %>
        <%= f.text_field :title , :id => "title", class: "form-control fieldMedio", placeholder: "Title", ariadescribedby: "helpBlock2" %>
    </div>

    <div class="form-group">
        <%= f.label "Conteúdo:" , :for => "content" %>
        <%= f.text_area :content , :id => "content", class: "form-control", placeholder: "Escreva aqui..." %>
      <span class="text-muted"> Limite de 140 caracteres</span>
    </div>


    </div>
    <br>

     <%= f.submit "Salvar", :class => 'btn btn-primary' %>
<% end %>
      

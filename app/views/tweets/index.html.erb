<div class="page-header">
  <h1>Tweets</h1>
</div>



<% @tweets.each do |tweet| %>

    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <%= tweet.title %>
        </div>
        <div class="panel-body">
          <%= tweet.content %>

        </div>
        <div class="panel-footer"><%= nome_com_email(tweet.usuario) %></div>
      </div>
      <hr>
    </div>

<% end %>




<div class="btn-group" role="group">

  <%= link_to 'Postar tweet', new_tweet_path, class: "btn btn-primary" %>

</div>


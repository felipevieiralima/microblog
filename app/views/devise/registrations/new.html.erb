<div class="row well col-md-6 col-md-offset-2">

  <h2 class="center">Criar conta</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :nome %><br/>
        <%= f.text_field :nome, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :descricao, "Descrição" %><br/>
        <%= f.text_field :descricao, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
            <em>(Sua senha deve conter pelo menos <%= @minimum_password_length %> caracteres )</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Cadastrar", class: "btn btn-default" %>
      </div>

  <% end %>

  <%= render "devise/shared/links" %>

</div>
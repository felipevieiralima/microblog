<div class="container-fluid ">

  <%= render 'usuarios/dados_basicos' %>

  <div class="col-md-9">
    <% if current_usuario.seguindo? @usuario %>
        <%= render 'relacionamentos/deixar_de_seguir' %>
    <% else %>
        <%= render 'relacionamentos/seguir' %>
    <% end %>

    <div class="page-header">
      <h3>Tweets </h3>
    </div>

    <% if @tweets.present? %>
        <% @tweets.each do |tweet| %>

            <div class="col-md-12">

              <div class="col-md-2">
                <%= image_tag tweet.usuario.foto.url(:medium), class: "img-responsive img-circle center-block" %>
              </div>

              <div class="col-md-10">
                <p><%= nome_com_email(tweet.usuario) %> </p>

                <p class="strong tweet"><%= tweet.content %></p>

                <p><%= tweet.created_at.to_s(:postado) %></p>

              </div>
              <hr>

            </div>
        <% end %>
    <% else %>
        <h4>Não foram encontrados tweets desse usuário.</h4>
    <% end %>


  </div>

</div>
